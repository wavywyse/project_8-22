    <section id="invite" class="pad-lg light-gray-bg">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text-center">
            <%= image_tag "login_icon"%>
            <h2 class="black">Come join us!</h2>
            <br />
            <br />
            
            <div class="row">
              <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                <form role="form" action="/create" method="post">
                  <div class="form-group">
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                      <p>
                        <label>First Name: </label>
                        <input type="text" name="user[first_name]" placeholder="First Name">
                      </p>
                      <p>
                        <label>Last Name: </label>
                        <input type="text" name="user[last_name]" placeholder="Last Name">
                      </p>
                      <p>
                        <label class="form_spacing">Email: </label>
                        <input type="email" name="user[email]" class="input_spacing" placeholder="Email@email.com">
                      </p>
                      <p>
                        <label>City: </label>
                        <input type="text" name="user[city]"><%= select_tag "state", options_for_select(us_states), :name => "user[state]" %>
                      </p>
                      <p>
                        <label>Password: </label>
                        <input type="password" name="user[password]">
                        <h6>*Password must be at least 7 characters in length</h6>
                      </p>
                      <p>
                        <label>Password Confirmation: </label>
                        <input type="password" name="user[password_confirmation]">
                      </p>  
                      <input type="submit" class="btn btn-primary btn-lg" value="Register">
                  </div>
                </form>

                <h2 class="black">Login</h2>
                <form role="form" action="/login" method="post">
                  <div class="form-group">
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <p>
                      <label>Email:</label>
                      <input type="text" name="email">
                    </p>
                    <p>
                      <label>Password:</label>
                      <input type="password" name="password">
                    </p>
                    <p>
                      <button class="btn btn-primary btn-lg">Login</button>
                    </p>                 
                  </div> 
                </form>

              </div>
            </div><!--End Form row-->

          </div>
        </div>
      </div>
    </section>
    
    
