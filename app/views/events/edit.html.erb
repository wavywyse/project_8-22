<script>
$(document).ready(function(){
	$('#date-input-1').datepicker({
		minDate: 0,
		dateFormat: "yy-mm-dd"
	});
})
</script>

<a href='/events'>Home</a>
<a href='/users/edit'>Edit Profile</a>
<a href='/logout'>Logout</a>

<div id='new-event-div'>
<% if flash[:errors]
	flash[:errors].each{ |error| %>
		<p><%=error%></p>
	<% } 
end %>
	<form action='/events/update/<%=@event.id%>' method='post'>
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<p>Name: <input type='text' name='event[name]' value='<%=@event.name%>'></p>
		<p>Date: <input type='text' name='event[date]' value='<%=@event.date%>' id='date-input-1'></p>
		<p>Location: <input type='text' name='event[city]' value='<%=@event.city%>'>
		<select name='event[state]'>
			<option value='CA'
			<% if @event.state == 'CA' %>
				selected='selected'
			<% end %>
			>CA</option>
			<option value='IL'
			<% if @event.state == 'IL' %>
				selected='selected'
			<% end %>
			>IL</option>
			<option value='NY'
			<% if @event.state == 'NY' %>
				selected='selected'
			<% end %>
			>NY</option>
		</select></p>
		<button>Add Event</button>
	</form>
</div>