  <head>
    <meta charset="utf-8">
    <title>Event details</title>
    <!--Fav-->
    <link href="images/favicon.ico" rel="shortcut icon">
    
    <!--styles-->


    <%= stylesheet_link_tag "magnific-popup", "normalize", "owl.carousel", "owl.theme", "responsive", "profile_page", "bootstrap.min" %>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,500,700' rel='stylesheet' type='text/css'>
    <script src="/assets/classie.js" type="text/javascript"></script>  
    <script src="/assets/typed.js" type="text/javascript"></script>  
    <script src="/assets/masonry.js" type="text/javascript"></script>  
    <script src="/assets/masonry.pkgd.min.js" type="text/javascript"></script>  
    <script src="/assets/owl.carousel.min.js" type="text/javascript"></script>  
    <script src="/assets/jquery.appear.js" type="text/javascript"></script>  
    <script src="/assets/jquery.magnific-popup.min.js" type="text/javascript"></script>  


  </head>
  <body>
    <% if flash[:errors]
  flash[:errors].each{ |error| %>
    <p><%=error%></p>
  <% } 
end %>

    <!--HEADER -->

    
<header id="header">
    <h1><a href="#">MeetUp</a></h1>
    <h1><%=current_user.first_name%></h1>
    <% if current_user.avatar? %>
      <%= image_tag current_user.avatar.url %>
    <% end %>
    <nav class="main">
      <ul>
      <li><a href="/users/edit">User Settings</a></li>
      <li>
        <% if current_user %>
        <form action="/logout" method="post" >
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <input name="_method" value="delete" type="hidden">
        <input type="submit" value="Logout">
        </form> 
        <% end %>
      </li>
        <li class="menu">
          <a class="fa-bars" href="#menu">Menu</a>
        </li>
      </ul>
    </nav>
  </header>
        <!--/.LOGO END-->
      </div>
<!--       <div class="menu-wrap">
        <nav class="menu">
          <div class="menu-list">
            
          </div>
        </nav>
        <button class="close-button" id="close-button">Close Menu</button>
      </div>
      <button class="menu-button" id="open-button">
        <span></span>
        <span></span>
        <span></span>
      </button><!--/.for-sticky--> -->
    </div>
    <!--/.HEADER END-->
    
    <!--CONTENT WRAP-->
    <div class="content-wrap">
      <!--CONTENT-->
      <div class="content">
        <!--HOME-->
        <section id="home">
          <div class="container">
            <div class="row">
              <div class="wrap-hero-content">
                  <div class="hero-content">
                    <h1>Hello</h1>
                    <br>
                    <span class="typed"></span>
                  </div>
              </div>
            </div>
          </div>
        </section>
        <!--/.HOME END-->

        <!--ABOUT-->
        <section id="about">
          <div class="col-md-6 col-xs-12 no-pad">
            <div class="bg-about"></div>
          </div>
          <div class="col-md-6 col-sm-12 col-xs-12 white-col">
            <div class="row">
              <!--OWL CAROUSEL2-->
              <div class="owl-carousel2">
                <div class="col-md-12">
                  <div class="wrap-about">
                    <div class="w-content">
                      <h1><%=@event.name%></h1>
                        <p>Host: <%=@host.first_name%> <%=@host.last_name%></p>
                        <p>Date: <%=@event.date%></p>
                        <p>Time: <%=@event.time%>
                        <p>Location: <%=@event.city%>, <%=@event.state%></p>
                          
                            <h5 class="name">
                        Good times...
                            </h5>                 
                    </div>
                  </div>
                </div>
              
                <div class="col-md-12 col-sm-12 col-xs-12 white-col">
                  <div class="row">
                    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12">
                      <div class="wrap-about"><br><br>
                        <h4>Other users joining this event</h4>
                        <table>
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th>Location</th>
                              <th>State</th>
                            </tr>
                          </thead>
                          <tbody>
                          <% @joins.each { |user| %>
                            <tr>
                              <td><%=user.first_name%> <%=user.last_name%></td>
                              <td><%=user.city%></td>
                              <td><%=user.state%></td>
                            </tr>
                          <% } %>
                          </tbody>
                        </table>
                      </div>
                        <div id="comments">
                        <% @comments.each{ |comment| %>
                          <p><%=comment.name%> says: <%=comment.content%></p>
                          <p>...........</p>
                        <% } %>
                        
                        </div>
                      
                      <form action='/comments/create/<%=@event.id%>' method='post'>
                        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                        <textarea id="commentbox1" name='content'></textarea>
                        <button>Add Comment</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <!--/.OWL CAROUSEL2 END-->
           
    <%= javascript_include_tag "profile", "jquery-1.11.0.min", "jquery.appear", "bootstrap.min", "classie", "owl.carousel.min", "jquery.magnific-popup.min", "masonry.pkgd.min", "masonry.js", "smooth-scroll.min", "typed" %>    
  </body>
 </html>